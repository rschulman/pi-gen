ssl = required
ssl_cert = </data/conf/letsencrypt/live/mail.{{host}}.{{tld}}/fullchain.pem
ssl_key = </data/conf/letsencrypt/live/mail.{{host}}.{{tld}}/privkey.pem

# Suggested cipher list from 
# https://blog.tinned-software.net/harden-the-ssl-configuration-of-your-mailserver/
# Also see https://github.com/BetterCrypto/Applied-Crypto-Hardening/blob/master/src/configuration/MailServers/Dovecot/10-ssl.conf
ssl_cipher_list = EDH+CAMELLIA:EDH+aRSA:EECDH+aRSA+AESGCM:EECDH+aRSA+SHA384:EECDH+aRSA+SHA256:EECDH:+CAMELLIA256:+AES256:+CAMELLIA128:+AES128:+SSLv3:!aNULL:!eNULL:!LOW:!3DES:!MD5:!EXP:!PSK:!DSS:!RC4:!SEED:!ECDSA:CAMELLIA256-SHA:AES256-SHA:CAMELLIA128-SHA:AES128-SHA
ssl_prefer_server_ciphers = yes
ssl_dh_parameters_length = 2048
